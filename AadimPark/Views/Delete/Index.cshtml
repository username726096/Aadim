@model AadimPark.Models.ViewModels.DeleteVM
@{
    ViewBag.Title = "Index";
}

<style>
    .a {
        width: 119px;
        height: 50px;
        background-color: rgba(255, 102, 0, 0.5);
        border-radius: 40px 40px 40px 40px;
        display: ;
        justify-content: center;
        align-items: center;
        border: none;
    }
    body {
        overflow: hidden;
    }
</style>
<div class="index-Users">
    <table>

        <thead>
            <tr>

                <th>SN</th>
                <th>Descrpition</th>
               
                <th style="margin-left: 50px; margin-right: 20px;">Actions</th>

            </tr>




        </thead>
        <tbody>
            @{
                int serialNumber = 1;
            }
            @foreach (var product in Model.Deletes)
            {

                <tr>
                    <td> @serialNumber  </td>
                    <td> @product.descrpition</td>
                    
                    <td> <button class="a"> <a href="@Url.Action("Edit", "User", new { id = @product.id })">Edit</a></button> <button class="a" style="color:white" onclick="deleteFunction(@product.id)">Delete</button></td>
                </tr>
                serialNumber++;
            }

        </tbody>
        </table>
    </div>


